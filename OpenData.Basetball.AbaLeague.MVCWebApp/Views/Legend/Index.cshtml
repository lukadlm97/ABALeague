@model LegendViewModel

<style>
    table {
        width: 100%;
        margin-top: 10px;
        border-collapse: collapse;
        border-spacing: 0;
    }

    th, td {
        padding: 8px;
        text-align: center;
        border: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<h2>Legend of Colors per Terms</h2>

@if (Model.Terms != null && Model.Terms.Any())
{
    foreach (var term in Model.Terms)
    {
        <h4>@term.Title</h4>
        <table>
            <thead>
                <tr>
                    @foreach (var legendItem in term.LegendItems)
                    {
                        <th>
                            @legendItem.Name
                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                <tr>
                    @foreach (var legendItem in term.LegendItems)
                    {
                        <td style="background-color: @legendItem.Color;">
                            &nbsp; <!-- Add content if needed -->
                        </td>
                    }
                </tr>
            </tbody>
        </table>
    }
}
else
{
    <p>No available term definitions.</p>
}
