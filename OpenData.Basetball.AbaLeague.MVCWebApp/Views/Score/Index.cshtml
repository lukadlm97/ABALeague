            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExistingScores[0].HomeTeamPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExistingScores[0].AwayTeamPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExistingScores[0].Venue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExistingScores[0].Attendency)
            </th>
            <td>
            </td>
