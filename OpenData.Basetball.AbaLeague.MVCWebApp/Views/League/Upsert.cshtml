@model LeagueUpsertViewModel


<h2>Create or update league</h2>


<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">League Form</h4>
        </div>
        <div class="card-body">
            <form asp-controller="League" asp-action="Save" method="post">
                <input type="hidden" asp-for="League.Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="League.OfficialName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="League.OfficialName" class="form-control" />
                        <span asp-validation-for="League.OfficialName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="League.ShortName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="League.ShortName" class="form-control" />
                        <span asp-validation-for="League.ShortName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="League.BaseUrl" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="League.BaseUrl" class="form-control" />
                        <span asp-validation-for="League.BaseUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="League.BoxScoreUrl" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="League.BoxScoreUrl" class="form-control" />
                        <span asp-validation-for="League.BoxScoreUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="League.RosterUrl" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="League.RosterUrl" class="form-control" />
                        <span asp-validation-for="League.RosterUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="League.StandingUrl" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="League.StandingUrl" class="form-control" />
                        <span asp-validation-for="League.StandingUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="League.CalendarUrl" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="League.CalendarUrl" class="form-control" />
                        <span asp-validation-for="League.CalendarUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="League.MatchUrl" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="League.MatchUrl" class="form-control" />
                        <span asp-validation-for="League.MatchUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.League.ProcessorTypes)
                    <div class="col-md-10">
                        <select asp-for="League.SelectedProcessorTypeId" class="form-control"
                                asp-items="Model.League.ProcessorTypes"></select>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.League.Seasons)
                    <div class="col-md-10">
                        <select asp-for="League.SelectedSeasonId" class="form-control"
                                asp-items="Model.League.Seasons"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="League.RoundsToPlay" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="League.RoundsToPlay" class="form-control" />
                        <span asp-validation-for="League.RoundsToPlay" class="text-danger"></span>
                    </div>
                </div> 
                <div class="form-group">
                    @Html.LabelFor(model => model.League.CompetitionOrganizations)
                    <div class="col-md-10">
                        <select asp-for="League.SelectedCompetitionOrganizationId" class="form-control"
                                asp-items="Model.League.CompetitionOrganizations"></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<p>
    <a asp-area="" asp-controller="League" asp-action="Index" class="btn btn-primary">Back to List</a>
</p>

